{
    "version": 2,
    "builds": [
        { 
            "src": "jobdata_project/wsgi.py", 
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12",
                "env": {
                    "DJANGO_SETTINGS_MODULE": "jobdata.settings"
                }
            }
        },
        { 
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": { 
                "distDir": "staticfiles"
            } 
        }    
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "jobdata_project/wsgi.py"
        }
    ]
}
